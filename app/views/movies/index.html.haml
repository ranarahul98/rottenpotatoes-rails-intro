-#  This file is app/views/movies/index.html.haml
%h2 All Movies
-# edit movie title and release date into clickable links
-# http://haml.info/tutorial.html
-# https://stackoverflow.com/questions/23908507/conditional-class-in-haml/23908682
-# https://apidock.com/rails/ActionView/Helpers/FormTagHelper/form_tag
= form_tag movies_path, :method => :get, :id => "ratings_form" do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, @checked_boxes[rating] # array of selected ratings
  = submit_tag 'Refresh', :id => "ratings_submit"

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th{:class => ("hilite" if @sort == "title")}= link_to 'Movie Title', {:sort => "title"}, :id => 'title_header' #view selects class if sort variable is 'title'
      %th Rating
      %th{:class => ("hilite" if @sort == "release_date")}= link_to 'Release Date', {:sort => "release_date"}, :id => 'release_date_header' 
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
